<h1>Delete Product</h1>
<section>
    <form action="/delete/{{this.id}}" onsubmit="checkValue()" method="POST" >
        <div>
            <label for="priority">Priority</label>
            <input type="text" id="priority" value="{{this.priority}}" name="priority" disabled />
            <label for="name">Name</label>
            <input type="text" id="name" value="{{this.name}}" name="name" disabled/>
            <label for="quantity">Quantity</label>
            <input type="text" id="quantity" value="{{this.quantity}}" name="quantity" disabled/>
            <label for="status">Status</label>
            <input type="checkbox" id="status" name="status" value="{{this.status}}" onclick="switchValue()" disabled>
            <label for="status" id="status-label"></label>
            <button type="submit" class="accept">Delete</button>
            <button type="button" class="cancel" onclick="location.href='/'">Cancel</button>
        </div>
    </form>
</section>